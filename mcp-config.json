{
  "mcpServers": {
    "mediasoup-agent": {
      "command": "node",
      "args": ["./server/mcp-http-server.js"],
      "env": {
        "MEDIASOUP_SERVER_URL": "http://localhost:5001",
        "MCP_PORT": "5002"
      }
    }
  },
  "httpServers": {
    "mediasoup-agent-http": {
      "url": "http://localhost:5002/mcp",
      "description": "MediaSoup Agent MCP Server via HTTP"
    }
  }
}
